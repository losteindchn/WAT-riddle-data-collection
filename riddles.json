riddles = "[\n  {\n    \"riddle_text\": \"一个女人正在看电影。突然，她听到外面传来很多爆炸声和人们的尖叫声。 然后是沉默。女人关掉电视，睡着了。\",\n    \"answer_pool\": [\n      \"除夕\"\n    ],\n    \"anchor_word\": \"生日\",\n    \"phase1_samples\": \"日历\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"张先生是个喜怒无常的怪人。每天上午他都会高兴的出门，晚上气冲冲地回来。邻居们经常听见他在家里大叫。\",\n    \"answer_pool\": [\n      \"青春期\"\n    ],\n    \"anchor_word\": \"精神病\",\n    \"phase1_samples\": \"高中\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"一个年轻女子每天都会去一家餐厅吃午餐，她总是点同一道菜，这道菜是由餐厅老板特制的，只有这位女子才能点。\",\n    \"answer_pool\": [\n      \"爸爸\"\n    ],\n    \"anchor_word\": \"管家\",\n    \"phase1_samples\": \"家庭\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"沙漠中有一个死去的男人，背着背包，面朝下在沙漠中，手上有一个戒指。\",\n    \"answer_pool\": [\n      \"跳伞\"\n    ],\n    \"anchor_word\": \"谋杀\",\n    \"phase1_samples\": \"浪花\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"一位老人，每周都会去图书馆借书，但是每次借书前都会翻到第30页，这是为什么? \",\n    \"answer_pool\": [\n      \"记号\"\n    ],\n    \"anchor_word\": \"孩子\",\n    \"phase1_samples\": \"书签\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"一个人从一间屋子里出来，伸手招了辆出租车，然后他再也没能回来这间屋子，请问这是为什么?\",\n    \"answer_pool\": [\n      \"小偷\"\n    ],\n    \"anchor_word\": \"搬家\",\n    \"phase1_samples\": \"警察\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"一个人离他的车有30米，但是他只走了五步就上车了，这是为什么?\",\n    \"answer_pool\": [\n      \"电梯\"\n    ],\n    \"anchor_word\": \"飞机\",\n    \"phase1_samples\": \"上面\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"一个人半夜醒来打了自己一巴掌，然后闻着一股燃烧的味道安心睡去了，请问发生了什么?\",\n    \"answer_pool\": [\n      \"蚊子\"\n    ],\n    \"anchor_word\": \"愤怒\",\n    \"phase1_samples\": \"血液\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"哥哥好后悔，如果那天自己吃了冰淇凌，弟弟就不会死了。\",\n    \"answer_pool\": [\n      \"冰柜\"\n    ],\n    \"anchor_word\": \"感冒\",\n    \"phase1_samples\": \"平衡\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"“我要做个好孩子，我是个好孩子…”我不停对自己说道。新闻报道了一起凶杀案，凶手至今下落不明…\",\n    \"answer_pool\": [\n      \"狗狗\"\n    ],\n    \"anchor_word\": \"悬崖\",\n    \"phase1_samples\": \"责任\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"田野中央有一根胡萝卜、一堆鹅卵石和两根管子。\",\n    \"answer_pool\": [\n      \"雪人\"\n    ],\n    \"anchor_word\": \"园艺\",\n    \"phase1_samples\": \"温度\",\n    \"phase2_samples\": []\n  },\n  {\n    \"riddle_text\": \"杰克带着他的指南针去旅行。走了很长一段路后，之后他再也找不到回去的路了。\",\n    \"answer_pool\": [\n      \"北极\"\n    ],\n    \"anchor_word\": \"失明\",\n    \"phase1_samples\": \"地理\",\n    \"phase2_samples\": []\n  }\n]"
